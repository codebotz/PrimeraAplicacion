<div class="col-md-8 col-md-offset-2">
<div class="panel panel-default">
  <div class="panel-heading"><h2><h2>Editar <%= resource_name.to_s.humanize %></h2></h2></div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field form-group">
          <%= f.label :nombres %><br />
          <%= f.text_field :nombres, autofocus: true, class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= f.label :apellidos %><br />
          <%= f.text_field :apellidos, class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= f.label :Nickname %><br />
          <%= f.text_field :nickname, class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :correo_electrónico %><br />
          <%= f.email_field :email%>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Esperando confirmación para: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field form-group">
          <%= f.label :password %> <i>(Dejar en blanco si no deseas cambiarlo)</i><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> caracteres mínimos</em>
          <% end %>
        </div>

        <div class="field form-group">
          <%= f.label :confirmación_de_password %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :password_actual %> <i>(Es necesario tu password actual para realizar los cambios)</i><br />
          <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Actualizar Datos", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <h3>Cancelar mi cuenta :(</h3>

      <p>No estás feliz? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estás seguro(a)?" }, method: :delete, class: 'btn btn-danger' %></p>
    </div>
    <div class="panel-footer">
      <%= link_to "Regresar", :back %>
    </div>
</div>
</div>
