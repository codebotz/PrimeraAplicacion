
<div class="col-md-12 col-md-offset-0">
<p id="notice"><%= notice %></p>
  
    <div id="postdiv" class="grid container-fluid transitions-enabled centered clearfix masonry">
      <% @posts.each do |post| %>
        <div class="grid box panel panel-default">
        <%= link_to(post) do %>
          <%= image_tag post.image.url %>
          <% end %>
          <div class="panel-body">
            <!--%= link_to 'Show', post %-->
            <!-- , style: "max-width:400px;" -->
            <p><strong><%= post.description %></strong></p>
            <p><%= post.user.email if post.user %></p>
            <code><%= post.created_at %></code>
            <% if post.user == current_user %>              
            <br/>
            <div class="actions">
              <%= link_to 'Editar', edit_post_path(post) %>
              <%= link_to 'Eliminar', post, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %>
            </div>
            <%end%>

          </div>
        </div>
        <% end %>
    </div>      
</div>      
